<style>
        .openButton {
            border: none;
            font-size: 16px;
            background-color: purple;
            color: white;
            padding: 14px 20px;
            cursor: pointer;

        }

        .softlockPopup {
            position: relative;
            text-align: center;
            width: 100%;
        }

        .formPopup {
            display: none;
            position: fixed;
            left: 45%;
            top: 30%;
            transform: translate(-50%, 5%);
            border: 3px solid #999999;
            z-index: 9;
        }

        .formContainer {
            max-width: 800px;
            padding: 80px;
            
            background-color: lightcyan;
        }

        .formContainer .btn {

            border: none;
            background-color: forestgreen;
            color:  black;
            font-size:large;
            padding-right:5px;
            width: 50%;
            display:inline;     
            float:left;
            
            
           
        }

        .formContainer .cancel {
            background-color: #cc0000;
            display:inline;
            float:right;
            font-size: large;
           
        }



        .iconDetails {
            margin-left: 2%;
            float: left;
            height: 20%;
            width: 20%;
        }

        .container2 {
            width: 100%;
            height: auto;
            padding: 1%;
        }

        h1 {
            margin: 0px;
        }

       


 </style>
</head>

<div class='container2'>
    <div>
        <img src="~/artboard-3@3x.png"  class='iconDetails'>
    </div>
    <div style='margin-left:60px;'>
        <h1> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp  Work Force Management Portal</h1>
            <h4 style="color:mediumvioletred"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp   Welome Manager!</h4>
     
    </div>
</div>
<br/>
<br/>
<script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<Script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></Script>

<div id="div">
    <center>
    <table id="tbl" >
        <thead class="table table-dark">
        <th>Employee ID</th>
        <th>Name</th>
        <th id="manager">Manager</th>
        <th>Email</th>
        <th>Skills</th>
        <th></th>
        </thead>
        <tbody id="tbody" class="table table-info">
   
        </tbody>

    </table>
    <br />
    <br />
    </center>
    <div>
        @Html.ActionLink("Back to Login", "Login")

    </div>
   
</div>


<div class="softlockPopup">
    <div class="formPopup" id="popupForm">
        <form class="formContainer">
            <h1 style="background-color:darkblue; color:white">Softlock Request Confirmation</h1>
            <h4>Please Confirm the lock request for <b id="emp"></b> </h4>

           
            <h6>Request Message(message must be atlease 10 char long)</h6>
            
           @* <input type="text"  id="psw" placeholder="Enter a text" name="psw" required minlength="10" size="40">*@
            <input id="message" type="text" placeholder="Enter a text"  minlength="10" style="height:100px;width:400px" />
            <br />
            <br />
            <button type="submit" class="btn" id="store" onclick="Requestlock()">Submit </button>
            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
    </div>
</div>

<script src="~/js/script.js"></script>
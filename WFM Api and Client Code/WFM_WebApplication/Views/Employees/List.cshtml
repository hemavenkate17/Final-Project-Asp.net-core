@model IEnumerable<WFM_WebAPI.Models.Employees_Skills>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .table {
            border: 2px solid black;
            border-collapse: collapse;
            align-content: center;
            margin-left:10px;
            width:100%;
        }

        .td {
            border: 3px solid black;
            border-collapse: collapse;
            background-color: lightcyan;
        }

        .th {
            border: 2px solid black;
            border-collapse: collapse;
            background-color: darkblue;
        }

        .btn {
            background-color: DodgerBlue;
            border: none;
            color: white;
            padding: 12px 16px;
            font-size: 16px;
            cursor: pointer;
        }

        /* Darker background on mouse-over */
        .btn:hover {
            background-color: RoyalBlue;
        }

        * {
            box-sizing: border-box;
        }

        .openBtn {
            display: flex;
            justify-content: left;
        }

        .openButton {
            border: none;
            font-size: 16px;
            background-color: dodgerblue;
            color: white;
            padding: 14px 20px;
            cursor: pointer;
          
        }

        .softlockPopup {
            position: relative;
            text-align: center;
            width: 100%;
        }

        .formPopup {
            display: none;
            position: fixed;
            left: 45%;
            top: 15%;
            transform: translate(-50%, 5%);
            border: 3px solid #999999;
            z-index: 9;
        }

        .formContainer {
            max-width: 600px;
            padding: 20px;
            background-color: bisque;
        }

        .formContainer .btn {
           
            border: none;
            background-color: #8ebf42;
            color: #fff;
            cursor: pointer;
            width: 100%;
            margin-bottom: 15px;
            opacity: 0.8;
        }

        .formContainer .cancel {
            background-color: #cc0000;
            
        }

        .formContainer .btn:hover,
        .openButton:hover {
            opacity: 1;
         }

       

    </style>
</head>


<table style="width:1000px" class="table" id="body">
    <thead class="th">
        <tr style="color:white">
            <th>
                @Html.DisplayNameFor(model => model.Employee_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wfm_manager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lockstatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                skills
            </th>
            <th>
                Request
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="td">
                <td>
                    @item.Employee_id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @item.Manager
                </td>
                <td>
                    @item.Wfm_manager
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Lockstatus
                </td>
                <td>
                    @item.Experience
                </td>
                <td>
                     <ul>
                        @foreach (var x in item.Skills)
                        {
                            <li style="border:solid;border-color:brown ;display:inline-block;background-color:blue">@x</li>
                        }
                    </ul>
                </td>
                <td>
                     <button class="openButton" onclick="openForm()"><i class="fa fa-lock"></i>Request</button>
                </td>
            </tr>
        }
    </tbody>
</table>


    <div class="softlockPopup">
        <div class="formPopup" id="popupForm">
            <form class="formContainer">
                <h1 style="background-color:darkblue"style>Softlock Request Confirmation</h1>
                <h4>Please Confirm the lock request for 1001</h4>
               
                <label>
                    <h6>Request Message(message must be atlease 10 char long)</h6>
                </label>
                <input type="text" id="psw" placeholder="Enter a text" name="psw" required minlength="10">
                <button type="submit" class="btn">Submit</button>
                <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
            </form>
        </div>
    </div>
    <script>
        function openForm() {
            document.getElementById("popupForm").style.display = "block";
            document.getElementById("body").style.display="none"
       
        }
        function closeForm() {
            document.getElementById("popupForm").style.display = "none";
            document.getElementById("body").style.display = "block";

        }
    </script>

</html>


   
   

